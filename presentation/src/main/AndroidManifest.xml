<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.parenting.attendance">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.parenting.attendance.presentation.AndroidApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity android:name="com.parenting.attendance.presentation.view.activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.parenting.attendance.presentation.view.activity.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:parentActivityName="com.parenting.attendance.presentation.view.activity.SplashScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.parenting.attendance.presentation.view.activity.SplashScreenActivity" />
        </activity>

        <activity
            android:name="com.parenting.attendance.presentation.view.activity.MainActivity"
            android:label="@string/app_name"></activity>

        <activity
            android:name="com.parenting.attendance.presentation.view.activity.UserListActivity"
            android:label="@string/activity_title_user_list"></activity>

        <activity
            android:name="com.parenting.attendance.presentation.view.activity.UserDetailsActivity"
            android:label="@string/activity_title_user_details"></activity>

        <activity
            android:name="com.parenting.attendance.presentation.view.activity.PriceDetailsActivity"
            android:label="@string/activity_title_user_details"></activity>

        <activity
            android:name="com.parenting.attendance.presentation.view.activity.OTPActivity"
            android:label="@string/title_activity_dashboard">
        </activity>

        <activity
            android:name=".presentation.view.activity.LoginActivity"
            android:label="@string/title_activity_login">
        </activity>

        <activity
            android:name=".presentation.view.activity.SignUpActivity"
            android:label="@string/title_activity_signup">
        </activity>




        <service android:name=".presentation.fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".presentation.fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/logo"
            tools:ignore="ManifestResource" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/accent" />

    </application>

</manifest>