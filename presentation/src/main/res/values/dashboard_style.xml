<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/accent</item>
    </style>

    <style name="tickerValueStyle" >
        <item name="android:textSize">@dimen/font_xxx_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tickerTradeStyle">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tickerTradeLayoutStyle">
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
        <item name="android:background">@drawable/trade_background</item>
    </style>

    <style name="tickerNameStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_tiny</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
    </style>


    <style name="tickerImageViewStyle">
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
        <item name="android:layout_marginRight">@dimen/spacing_small</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>